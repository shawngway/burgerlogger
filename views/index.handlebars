<h1>Burgers!</h1>

<h2>Burgers</h2>

<ul>
  {{#each undevoured}}
  <div class="notDevoured">
    <p>{{burger_name}}</p>
  </div>
  {{/each}}
</ul>

<h2>Burgers eaten!</h2>

<ul>
  {{#each devoured}}
  <div class="devoured">
    <p>{{burger_name}}</p>
  </div>
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> devoured!<br>
    <input type="radio" name="devoured" value="0"> not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>